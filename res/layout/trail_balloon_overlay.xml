<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:paddingBottom="20dip"
	android:minWidth="250dip" android:id="@+id/balloon_main_layout"
	android:background="@drawable/balloon_overlay_bg_selector"
	android:paddingTop="0dip" android:paddingRight="0dip"
	android:paddingLeft="10dip">


	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingBottom="10dip">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1" android:paddingTop="10dip"
			android:id="@+id/balloon_inner_layout">
			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/trailTitle"
				android:text="Trail Name" android:textSize="16dip"
				android:textStyle="bold" android:textColor="@android:color/white" android:maxLines="1"/>
			<LinearLayout android:orientation="horizontal"
				android:gravity="center_vertical" android:layout_width="wrap_content"
				android:layout_height="20dp">
				<TextView android:id="@+id/areaTitle" android:gravity="center_vertical"
					android:text="Area Name" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingRight="5dp"
					android:textColor="@android:color/white" android:textSize="12dip" />
				<RatingBar android:id="@+id/areaRating"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center_vertical" style="@style/reviewBarStyleSmall" />
					<!-- "?android:attr/ratingBarStyleSmall" -->
			</LinearLayout>
		</LinearLayout>

		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/balloon_overlay_close"
			android:id="@+id/close_img_button" android:paddingLeft="10dip"
			android:paddingBottom="10dip" android:paddingRight="8dip"
			android:paddingTop="8dip" />
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent" android:gravity="left" 
		android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginRight="10dip">
		
		<ImageButton android:id="@+id/button1" android:layout_height="45dp"
			android:layout_width="75dp" android:scaleType="center"   android:src="@drawable/ic_menu_info_details"
			 />
		<ImageButton android:id="@+id/button3" android:layout_height="45dp"
			android:layout_width="75dp" android:scaleType="center"   android:src="@drawable/ic_title_map"
			 />
			
		<ImageButton android:id="@+id/button2"  android:layout_height="45dp"
			android:layout_width="75dp" android:scaleType="center"   android:src="@drawable/ic_menu_goto"
			 />
	</LinearLayout>
</LinearLayout>
